{
  "name": "Cloudflare DNS & Tunnel Manager",
  "version": "1.0.0",
  "slug": "cloudflare_dns_tunnel_manager",
  "description": "Manage Cloudflare DNS and automatically create a Cloudflare Tunnel to Home Assistant",
  "arch": ["amd64","armv7","armhf","aarch64"],
  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "ingress": true,
  "panel_icon": "mdi:cloud",
  "panel_title": "Cloudflare DNS & Tunnel",
  "webui": "http://[HOST]:[PORT:8080]/",
  "image": "ghcr.io/username/cloudflare_dns_tunnel_manager-{arch}",
  "map": ["config:rw", "addon_config:rw"],
  "ports": {
    "8080/tcp": 8080
  },
  "options": {
    "api_token": "",
    "hostname": "",
    "service_port": 8123,
    "records": ["home.example.com"],
    "update_interval": 10,
    "ipv6": true,
    "create_missing": true
  },
  "schema": {
    "api_token": "str",
    "hostname": "str",
    "service_port": "int",
    "records": ["str"],
    "update_interval": "int",
    "ipv6": "bool",
    "create_missing": "bool"
  }
}
